<?xml version="1.0"?>
<sdf version="1.10">
  <world name="anchored">

    <!-- luce ambiente globale (schiarisce le ombre) -->
    <scene>
      <ambient>0.4 0.4 0.4 1</ambient>
    </scene>

    <!-- sole -->
    <light name="sun" type="directional">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>1 1 1 1</diffuse>
      <specular>0.1 0.1 0.1 1</specular>
      <attenuation>
        <range>100</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.5 -1</direction>
    </light>

    <!-- ground plane inline -->
    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>200 200</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>200 200</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.6 0.6 0.6 1</ambient>
            <diffuse>0.7 0.7 0.7 1</diffuse>
            <specular>0.1 0.1 0.1 1</specular>
          </material>
        </visual>
      </link>
    </model>

    <!-- robot incluso -->
    <include>
      <uri>file:///home/marco/ROS2-exercises-with-manipulators/src/bridge_test_gz/bridge_test_gz/urdf/robot_converted2.sdf</uri>
      <name>planar_arm</name>
      <pose>0 0 0 0 0 0</pose>
    </include>


    <!-- ancora world ↔ base_link -->
    <joint name="anchor_base" type="fixed">
      <parent>world</parent>
      <child>planar_arm::base_link</child>
    </joint>

    <!-- tavolo da ping pong -->
    <model name="box">
      <static>true</static>
      <link name="link_box">
        <visual name="visual">
          <pose>4.75 5 0 0 0 0</pose>
            <geometry>
              <box>
                <size>2.5 1.5 0.6</size>
              </box>
            </geometry>
        </visual>
        <collision name="collision">
          <geometry>
            <box><size>2.5 1.5 0.6</size></box>
          </geometry>
        </collision>
      </link>
    </model>

    <!-- per ancorare world ↔ tavolo --> 
    <joint name="anchor_box" type="fixed">
      <parent>world</parent>
      <child>box::link_box</child>
    </joint>

  </world>
</sdf>
